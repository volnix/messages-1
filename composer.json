{
	"name": "werx/messages",
	"type": "library",
	"license": "MIT",
	"description": "Simple package for building and displaying various types of messages in a web app.",

	"authors":[
		{
			"name": "Josh Moody",
			"email": "josh@moody.io"
		}
	],

	"require": {
		"php": ">= 5.4",
		"symfony/http-foundation": "2.5.*@dev"
	},

	"require-dev": {
		"phpunit/phpunit": "~4.4",
		"squizlabs/php_codesniffer": "~2.2"
	},

	"autoload": {
		"psr-4": {
			"werx\\Messages\\": "src/",
			"werx\\Messages\\Decorators\\": "src/Decorators",
			"werx\\Messages\\Utils\\": "src/Utils"
		}
	}
}